<h1>Listing gif_links</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @gif_links.each do |gif_link| %>
      <tr>
        <td><%= gif_link.title %></td>
        <td><%= gif_link.url %></td>
        <td><%= gif_link.description %></td>
        <td><%= link_to 'Show', gif_link %></td>
        <td><%= link_to 'Edit', edit_gif_link_path(gif_link) %></td>
        <td><%= link_to 'Destroy', gif_link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

